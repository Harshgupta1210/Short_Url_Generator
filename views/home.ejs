<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }
    </style>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <!-- Include Tailwind CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  </head>
  <body class="bg-gray-100 min-h-screen flex flex-col items-center">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-2xl mt-8 mx-4 md:mx-auto">
      <h1 class="text-3xl font-bold mb-6 text-center">URL Shortener</h1>
      
      <% if (locals.id) { %>
      <p class="text-center text-green-600">URL Generated: <a href="http://localhost:8001/url/<%= id %>" class="text-blue-500 underline">http://localhost:8001/url/<%= id %></a></p>
      <% } %>
      
      <div class="mt-6">
        <form method="POST" action="/url" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700">Enter Your Original URL</label>
            <input type="text" name="url" placeholder="https://example.com" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
          </div>
          <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Generate
          </button>
        </form>
      </div>

      <div class="mt-8 overflow-x-auto">
        <% if (locals.urls) { %>
        <table class="min-w-full bg-white divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="py-2 px-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">S. No</th>
              <th class="py-2 px-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ShortID</th>
              <th class="py-2 px-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Redirect</th>
              <th class="py-2 px-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Clicks</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% urls.forEach((url, index) => { %>
            <tr>
              <td class="py-2 px-4 whitespace-nowrap"><%= index + 1 %></td>
              <td class="py-2 px-4 whitespace-nowrap"><%= url.shortId %></td>
              <td class="py-2 px-4 whitespace-nowrap"><%= url.redirectURL %></td>
              <td class="py-2 px-4 whitespace-nowrap"><%= url.visitHistory.length %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } %>
      </div>
    </div>
  </body>
</html>
